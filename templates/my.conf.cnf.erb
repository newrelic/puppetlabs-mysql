### MANAGED BY PUPPET ###
<% settings.sort.each do |section, content|      -%>
[<%= section %>]
<%   content.sort.each do |key, values|          -%>
<%     [values].flatten.sort.each do |value|     -%>
<%= value == false ? '#' : '' %><%= key -%><%=
         case value
         when true, false
           ''
         else
           " = #{value}"
         end
%>
<%     end                                       -%>
<%   end                                         -%>

<% end                                           -%>
<% if include_files                              -%>
<%   include_files.sort.each do |name|           -%>
!include <%= name %>
<%   end -%>
<% end -%>
